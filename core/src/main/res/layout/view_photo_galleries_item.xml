<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.jiahan.fave.core.feature.common.PhotoGalleriesItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="@dimen/size_40">

        <com.jiahan.fave.core.widget.ZoomableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:imageUrl="@{viewModel.imageUrl}"
            bind:onLongClickedListener="@{viewModel.onLongClickedListener}" />
    </LinearLayout>
</layout>