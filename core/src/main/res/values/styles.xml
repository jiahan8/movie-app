<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nunito_font_family</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.FullTransparent" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Toolbar.Transparent" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Toolbar.TitleTextCollapse" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="Toolbar.TitleTextExpanded" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_26</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily">@font/nunito_extra_bold</item>
    </style>

    <style name="TabLayout.TitleTextNormal" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_extra_bold</item>
    </style>

    <style name="TabLayout.TitleTextLarge" parent="TabLayout.TitleTextNormal">
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="viewInflaterClass">
            com.google.android.material.theme.MaterialComponentsViewInflater
        </item>
        <item name="cornerRadius">@dimen/size_4</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="BaseTextView" parent="Widget.AppCompat.TextView">
        <item name="viewInflaterClass">
            com.google.android.material.theme.MaterialComponentsViewInflater
        </item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="viewInflaterClass">
            com.google.android.material.theme.MaterialComponentsViewInflater
        </item>
    </style>

    <style name="CTAButton" parent="BaseButton">
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositiveButton" parent="BaseButton">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NegativeButton" parent="BaseButton">
        <item name="android:strokeWidth">@dimen/size_1</item>
        <item name="android:strokeColor">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeWidth">@dimen/size_1</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="SlideDialogAnimation">
        <item name="android:windowEnterAnimation">@animator/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@animator/slide_bottom_out</item>
        <item name="android:animationDuration">100</item>
    </style>
</resources>