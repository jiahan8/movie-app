<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jiahan.fave.favecomponent.component.deal.DealSmallItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:onClick="@{viewModel::onItemClicked}"
        tools:ignore="ContentDescription">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="@dimen/size_90"
            android:layout_height="@dimen/size_90"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/size_8"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/content"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    imageUrl="@{viewModel.logo}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <com.jiahan.fave.core.widget.NunitoBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/lipstick"
                    android:gravity="center"
                    android:padding="@dimen/size_1"
                    android:text="@{viewModel.discount}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_10"
                    android:visibility="@{viewModel.discountVisibility}"
                    tools:text="50% OFF" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:src="@drawable/ic_trending"
            android:visibility="@{viewModel.trendingVisibility}"
            app:layout_constraintRight_toLeftOf="@id/content"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:src="@drawable/ic_flash"
            android:visibility="@{viewModel.flashVisibility}"
            app:layout_constraintRight_toLeftOf="@id/content"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.jiahan.fave.core.widget.NunitoBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{viewModel.outletViewModel.companyViewModel.companyName}"
                android:textColor="@color/brownish_grey_four"
                android:textSize="@dimen/text_size_10"
                app:lineHeight="@dimen/text_line_height_14"
                tools:text="Massager" />

            <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{viewModel.dealName}"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_size_14"
                app:lineHeight="@dimen/text_line_height_18"
                tools:text="Massage B2B" />

            <com.jiahan.fave.core.widget.NunitoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@{viewModel.outletViewModel.shortAddress}"
                android:textColor="@color/brownish_grey_four"
                android:textSize="@dimen/text_size_12"
                app:drawableStartAlign="@{@drawable/ic_location_pin_grey}"
                bind:ellipsizeIndex="@{viewModel.outletViewModel.addressEllipsizeIndex}"
                tools:drawableStart="@drawable/ic_location_pin_grey"
                tools:text="Bangsar South" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.jiahan.fave.core.widget.NunitoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_star_filled"
                    android:drawablePadding="@dimen/margin_very_tiny"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.outletViewModel.companyViewModel.rating}"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="@{viewModel.outletViewModel.companyViewModel.ratingVisibility}"
                    tools:text="4.8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <com.jiahan.fave.core.widget.NunitoSemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:text="@{viewModel.originalPrice}"
                        android:textColor="@color/brown_grey_two"
                        android:textSize="@dimen/text_size_10"
                        android:visibility="@{viewModel.originalPriceVisibility}"
                        tools:text="RM20.00" />

                    <com.jiahan.fave.core.widget.NunitoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.price}"
                        android:textColor="@color/lipstick"
                        android:textSize="@dimen/text_size_12"
                        tools:text="RM10.00" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/divider_color"
            android:visibility="@{viewModel.dividerVisibility}"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>