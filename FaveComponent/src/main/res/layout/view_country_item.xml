<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jiahan.fave.favecomponent.component.location.CountryItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_normal"
        android:paddingBottom="@dimen/margin_normal">

        <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:text="@{viewModel.name}"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_16"
            tools:text="Mid Valley City" />

        <ImageView
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            bind:imageUrl="@{viewModel.icon}"
            tools:src="@drawable/ic_navigation_back_pink" />
    </LinearLayout>
</layout>