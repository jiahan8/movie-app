<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jiahan.fave.favecomponent.component.howItWork.HowItWorkItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_very_huge"
        android:orientation="vertical">

        <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.title}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            tools:text="1. Pick Your Ecard" />

        <com.jiahan.fave.core.widget.NunitoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:text="@{viewModel.desc}"
            android:textColor="@color/brownish_grey_four"
            android:textSize="@dimen/text_size_14"
            tools:text="Buy an eCard or gift it to a friend." />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:adjustViewBounds="true"
            android:visibility="@{viewModel.imageVisibility}"
            app:imageUrl="@{viewModel.imageUrl}"
            tools:src="@drawable/default_placeholder" />
    </LinearLayout>
</layout>