<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.jiahan.fave.favecomponent.component.deal.DealSmallItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/size_20">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_90"
            android:layout_height="@dimen/size_90"
            android:layout_marginEnd="@dimen/size_16"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/size_8"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

<!--                <com.jiahan.fave.core.widget.NunitoBoldTextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="bottom"-->
<!--                    android:background="@{viewModel.purchaseStatusBackground}"-->
<!--                    android:gravity="center"-->
<!--                    android:padding="@dimen/size_2"-->
<!--                    android:text="@{viewModel.purchaseStatus}"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="@dimen/text_size_10" />-->
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.jiahan.fave.core.widget.NunitoSemiBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_2"
                    android:text="@{viewModel.outletViewModel.outletName}"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size_11" />

                <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>