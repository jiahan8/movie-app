<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jiahan.fave.favecomponent.component.location.SearchResultItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:gravity="center_vertical"
        android:onClick="@{viewModel::onItemClicked}"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_normal"
        android:paddingBottom="@dimen/margin_normal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/size_36"
            android:layout_height="@dimen/size_36"
            android:elevation="@dimen/margin_tiny"
            app:cardCornerRadius="@dimen/margin_small"
            app:cardElevation="@dimen/size_0"
            app:strokeColor="@color/very_light_pink_eight"
            app:strokeWidth="@dimen/size_1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                bind:src="@{viewModel.iconResource}"
                tools:src="@drawable/ic_location_pink" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:orientation="vertical">

            <com.jiahan.fave.core.widget.NunitoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="@{viewModel.name}"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_size_16"
                tools:text="Bangsar" />

            <com.jiahan.fave.core.widget.NunitoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:text="@{viewModel.address}"
                android:textColor="@color/brownish_grey_four"
                android:textSize="@dimen/text_size_12"
                tools:text="Taman Desa, Kuala Lumpur" />
        </LinearLayout>
    </LinearLayout>
</layout>