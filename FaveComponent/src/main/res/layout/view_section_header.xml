<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jiahan.fave.favecomponent.component.sectionHeader.SectionHeaderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_large"
            android:letterSpacing="0.02"
            android:text="@{viewModel.title}"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_20"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constrainedWidth="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/see_more"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Deals in Barbook Bakeryyyyyyyyyyyyyyyyyy" />

        <com.jiahan.fave.core.widget.NunitoRegularTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:layout_marginEnd="@dimen/margin_large"
            android:text="@{viewModel.description}"
            android:textColor="@color/brownish_grey_four"
            android:textSize="@dimen/text_size_14"
            android:visibility="@{viewModel.descriptionVisibility}"
            app:layout_constrainedWidth="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/see_more"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="Get up to 50% extra cashback!"
            tools:visibility="gone" />

        <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
            android:id="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_tiny"
            android:gravity="center_vertical"
            android:onClick="@{viewModel.onClickListener}"
            android:text="@string/see_more"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_14"
            android:visibility="@{viewModel.seeMoreVisibility}"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@id/title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintVertical_chainStyle="packed"
            bind:drawableEndAlign="@{@drawable/ic_arrow_right_pink}"
            tools:drawableEnd="@drawable/ic_arrow_right_pink"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>