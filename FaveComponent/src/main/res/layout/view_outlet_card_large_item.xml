<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jiahan.fave.favecomponent.component.outlet.OutletLargeViewModel" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UnusedAttribute,ContentDescription">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_290"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:onClick="@{viewModel::onItemClicked}"
            android:outlineSpotShadowColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/size_16"
            app:cardElevation="@dimen/size_4"
            app:cardPreventCornerOverlap="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@{viewModel.cardBackground}">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_175"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/lb_shop_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    bind:imageUrl="@{viewModel.galleryImage}" />

                <com.jiahan.fave.core.widget.NunitoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_normal"
                    android:background="@{viewModel.dynamicCashbackBackground}"
                    android:paddingStart="@dimen/margin_normal"
                    android:paddingTop="@dimen/margin_very_tiny"
                    android:paddingEnd="@dimen/margin_normal"
                    android:paddingBottom="@dimen/margin_very_tiny"
                    android:text="@{viewModel.dynamicCashbackTime}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="@{viewModel.dynamicCashbackVisibility}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/image"
                    tools:background="@color/colorPrimary"
                    tools:text="20% Cashback (Now until 2:30PM)" />

                <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
                    android:id="@+id/lb_shop_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.companyViewModel.companyName}"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size_16"
                    app:layout_constraintEnd_toStartOf="@id/img_logo"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image"
                    tools:text="Pie Kingdom Long Outlet Name" />

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_margin="@dimen/margin_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/lb_shop_name"
                    app:layout_constraintTop_toBottomOf="@id/image"
                    bind:imageUrl="@{viewModel.companyViewModel.logo}" />

                <com.jiahan.fave.core.widget.NunitoRegularTextView
                    android:id="@+id/lb_shop_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_tiny"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.shortAddress}"
                    android:textColor="@color/brownish_grey_four"
                    android:textSize="@dimen/text_size_12"
                    app:drawableStartAlign="@{@drawable/ic_location_pin_grey}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lb_shop_name"
                    bind:ellipsizeIndex="@{viewModel.addressEllipsizeIndex}"
                    tools:drawableStart="@drawable/ic_location_pin_grey"
                    tools:text="Bangsar Sou... (1.2km)" />

                <com.jiahan.fave.core.widget.NunitoRegularTextView
                    android:id="@+id/lb_shop_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_tiny"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.companyViewModel.tagsLabel}"
                    android:textColor="@color/brownish_grey_four"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="@{viewModel.companyViewModel.tagsLabelVisibility}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/lb_shop_addr"
                    app:layout_constraintTop_toBottomOf="@id/lb_shop_name"
                    tools:text="Cafe, Western" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:background="@color/divider_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lb_shop_addr" />

                <ImageView
                    android:id="@+id/img_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:onClick="@{viewModel::onFavouriteClicked}"
                    android:visibility="@{viewModel.favouriteVisibility}"
                    app:layout_constraintBottom_toBottomOf="@id/bottom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/bottom"
                    bind:src="@{viewModel.favouriteIcon}"
                    tools:src="@drawable/ic_heart_filled" />

                <LinearLayout
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_normal"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/img_fav"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider">

                    <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:drawableStart="@drawable/ic_star_filled"
                        android:drawablePadding="@dimen/margin_very_tiny"
                        android:gravity="center_vertical"
                        android:text="@{viewModel.companyViewModel.rating}"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="@{viewModel.companyViewModel.ratingVisibility}"
                        tools:text="5.0" />

                    <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:drawableStart="@drawable/ic_dollar"
                        android:drawablePadding="@dimen/margin_very_tiny"
                        android:text="@{viewModel.companyViewModel.priceRange}"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="@{viewModel.companyViewModel.priceRangeVisibility}"
                        tools:text="RM20-30" />

                    <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_wallet"
                        android:drawablePadding="@dimen/margin_very_tiny"
                        android:text="@{viewModel.companyViewModel.partnerCashback}"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="@{viewModel.companyViewModel.partnerCashbackVisibility}"
                        tools:text="RM8.30" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/margin_large"
            android:elevation="@dimen/size_4"
            android:src="@drawable/ic_promo_cashback"
            android:visibility="@{viewModel.dynamicCashbackVisibility}" />
    </FrameLayout>
</layout>