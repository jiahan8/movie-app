<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jiahan.fave.favecomponent.component.location.CityItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{viewModel::onItemClicked}"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_normal"
        android:paddingBottom="@dimen/margin_normal">

        <com.jiahan.fave.core.widget.NunitoRegularTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@{viewModel.name}"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_size_16"
            android:visibility="@{!viewModel.selected}"
            tools:text="Mid Valley City" />

        <com.jiahan.fave.core.widget.NunitoExtraBoldTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@{viewModel.name}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            android:visibility="@{viewModel.selected}"
            tools:text="Mid Valley City" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:visibility="@{viewModel.selected}" />
    </LinearLayout>
</layout>